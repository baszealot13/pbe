{
  "apps" : [{
    "name"        : "pbe",
    "script"      : "server.js",
    "instances": 1,
    "exec_mode"  : "fork_mode",
    "args"        : ["--env production"],
    "watch": ["server.js", "api", "ui"],
    "ignore_watch" : [
        "node_modules", 
        "bower_components"
    ],
    "env": {
      "NODE_ENV": "production",
      "HTTP_PORT": 80,
      "HTTPS_PORT": 443
    },
    "error_file" : "logs/pbe-err.log",
    "out_file"    : "logs/pbe-out.log"
  }]
}