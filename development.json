{
    "apps": [
        {
            "name": "pbe-dev",
            "script": "server.js",
            "instances": 1,
            "exec_mode": "fork_mode",
            "args": ["--env", "development"],
            "watch": false,
            "ignore_watch": [
                "node_modules",
                "bower_components"
            ],
            "env": {
                "NODE_ENV": "development",
                "HTTP_PORT": 8443
            },
            "error_file": "logs/pbe-dev-err.log",
            "out_file": "logs/pbe-dev-out.log"
        }
    ]
}